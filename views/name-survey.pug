html
    head
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css")
        link(rel="stylesheet" type="text/css" href="/styles/create-survey.css")
        title= title
    body
        form(action="/surveys/create" method="post")
            input(type='hidden' name='_csrf' value=token) 
            div
                label(for="surveyName") Enter a name for your survey!
                input(type="text" name="surveyName" placeholder="Make it interesting!")
            div 
                button(type="submit") Create Survey