html 
    head
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css")
        link(rel="stylesheet" type="text/css" href="/styles/create-survey.css")
        script(src="/scripts/new-question.js" type="application/javascript")
        title= title
    body
        input(type="hidden" value=surveyId id="surveyId")
        input(type="hidden" value=token name="_csrf" id="csrfToken")
        div(id="main-content")
            h1(id="survey-preview-header" class="title-4") survey preview:
            div(id="survey-form" class="box")
                h1(id="survey-preview-title" class="title green")= name
            div(id="options-container" class="hidden option-container box")
                form(id="question-main-prompt-form")
                        input(name="question-text" id="question-text" type="text" placeholder="Enter the text for the new question" class="question-input")
                        label(for="question-type")
                        select(id="question-type" name="question-type" required)
                            option(value="multiple-choice" selected= true) Multiple Choice
                            option(value="scroll") Scroll
                        button(type="submit" id="new-question-options" class="button is-light is-success") Continue
            div 
                button(class="new-question" id="new-question-button" class="button is-light is-success") + Question
            div(id="current-question-prompt-container" class="is-hidden box")
                p(id="current-question-prompt" class="title-4")
            div(id="multiple-choice-container" class="hidden")
                div
                    ul(id="option-list")
                div 
                    label(for="new-option-text") Answer Text
                    input(id="new-option-text" type="text" name="new-option-text" placeholder=" Enter answer text here...")
                div
                    button(id="add-option" class="button is-light is-success") + Add Option
                    button(id="save-question" class="button is-light is-success") Save Question
            div(id="bottom-buffer")
        