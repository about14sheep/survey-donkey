extends layout.pug


block content
    div(class="has-background-light")
        section(class="container")
            h2(class="title has-text-centered")= questionText
            h1(class="subtitle has-text-centered specialGreen") Survey: #{survey.name}
            input(id="_csrfToken" type="hidden" value=token)
            each shortans in resShortans
                div(class="columns")
                    div(class="column is-one-fifth")
                    div(class="column is-three-fifths box")
                        h2(class="title has-text-centered")= shortans.questionResponseValue
                    div(class="column is-one-fifth")