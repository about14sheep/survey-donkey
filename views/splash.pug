extends layout.pug

include utils.pug

block append head
    link(rel="stylesheet" type="text/css" href="/styles/splash.css")
    script(src="/scripts/splash.js" type="application/javascript")
block content
    div(class="typingAnimation_container")
        span(class="typingAnimation_span")
    br
    br
    br
    br
    br
    br
    +validationErrorSummary(errors)
    form(action='/login' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +demofield('Email Address: ', 'email', 'demo@surveydonkey.com')
        +demofield('Password: ', 'password', 'Y0uThinkYouAreSoSmartFindingThisPasswordDontYou!', 'password')
        div(class='py-4')
            button(type='submit' class="button is-success is-light") Demo User Login
