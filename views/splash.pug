extends layout.pug

include utils.pug

block append head
    link(rel="stylesheet" type="text/css" href="/styles/splash.css")
    script(src="/scripts/splash.js" type="application/javascript")
    meta(property="og:title" content="Survey Donkey")
    meta(property="og:image" content="https://64.media.tumblr.com/0f138e35c544286ec0877af3d2ac69f5/1a2382fe025de4ed-b1/s1280x1920/08804d5954559a6d8209b8913ea46149376196c2.png")
    meta(property="og:description:" content="SurveyDoneky is an interactive survey creation and participation site inspired by SurveyMonkey. Designed using PUG templates for HTML and Bulma for CSS on the front end, with express and sequelize to handle the back end.")
block content
    div(class="splash__container") 
        div(class='demo__container')
            div(class="typingAnimation_container")
                span(class="typingAnimation_span")
            div(class="bottom__splash")    
                p(class="has-text-grey is-size-5") For surveys that matter. Over twenty thousand questions answered every day.
                br
                br
                br
                if !locals.authenticated
                    div(class='secondDemo__container')
                        a(href='/sign-up' class="button is-success") GET STARTED
                        +validationErrorSummary(errors)
                        form(action='/login' method='post')
                            input(type='hidden' name='_csrf' value=csrfToken)
                            +demofield('Email Address: ', 'email', 'demo@surveydonkey.com')
                            +demofield('Password: ', 'password', 'P4ssword!', 'password')
                            div(class='py-4')
                                button(type='submit' class="button is-success is-light") Demo User Login
        include footer.pug